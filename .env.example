# ========================================
# FIREBASE CLIENT (usado no browser)
# Pegue em: Firebase Console > Configuracoes do projeto > Seus apps
# ========================================
NEXT_PUBLIC_FIREBASE_API_KEY=sua_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=seu_projeto.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=seu_projeto
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=seu_projeto.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abc123
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXX

# ========================================
# FIREBASE ADMIN (apenas servidor)
# Pegue em: Firebase Console > Configuracoes > Contas de servico > Gerar nova chave privada
# ========================================
FIREBASE_PROJECT_ID=seu_projeto
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@seu_projeto.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSUA_CHAVE_PRIVADA_AQUI\n-----END PRIVATE KEY-----\n"

# ========================================
# ABACATEPAY
# Pegue em: https://abacatepay.com/dashboard
# ========================================
ABACATEPAY_API_KEY=abc_prod_sua_chave
ABACATEPAY_WEBHOOK_SECRET=seu_webhook_secret

# ========================================
# YOUTUBE API
# Pegue em: https://console.cloud.google.com/apis/credentials
# ========================================
YOUTUBE_API_KEY=sua_youtube_api_key

# ========================================
# CLOUDINARY
# Pegue em: https://cloudinary.com/console
# ========================================
CLOUDINARY_CLOUD_NAME=seu_cloud_name
CLOUDINARY_API_KEY=sua_api_key
CLOUDINARY_API_SECRET=seu_api_secret

# ========================================
# APP CONFIG
# ========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
